<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="@drawable/loginbackground"
    >

    <android.support.constraint.Guideline
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/guidehorilog"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.08"

        />

    <android.support.constraint.Guideline
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:id="@+id/horizontal1"
        app:layout_constraintGuide_percent="0.20"
        />

    <android.support.constraint.Guideline
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:id="@+id/horizontal2"
        app:layout_constraintGuide_percent="0.30"
        />
    <android.support.constraint.Guideline
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:id="@+id/horizontal3"
        app:layout_constraintGuide_percent="0.40"
        />
    <android.support.constraint.Guideline
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:id="@+id/horizontal4"
        app:layout_constraintGuide_percent="0.50"
        />

    <android.support.constraint.Guideline
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:id="@+id/horizontal5"
        app:layout_constraintGuide_percent="0.61"

        />

    <android.support.constraint.Guideline
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:id="@+id/horizontal6"
        app:layout_constraintGuide_percent="0.70"
        />

    <android.support.constraint.Guideline
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:id="@+id/horizontal7"
        app:layout_constraintGuide_percent="0.80"
        />
    <android.support.constraint.Guideline
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:id="@+id/horizontal8"
        app:layout_constraintGuide_percent="0.90"
        />

    <android.support.constraint.Guideline
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:id="@+id/horizontal9"
        app:layout_constraintGuide_percent="1"
        />

    <EditText
        android:layout_width="260dp"
        android:layout_height="45dp"
        app:layout_constraintTop_toBottomOf="@id/horizontal1"
        app:layout_constraintBottom_toBottomOf="@id/horizontal2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/corners"
        android:layout_marginHorizontal="50dp"
        android:layout_marginVertical="10dp"
        android:drawableLeft="@drawable/username"
        android:hint="  Username"
        android:textColorHint="@color/white"
        android:id="@+id/et_roll"


        />
    <EditText
        android:layout_width="260dp"
        android:layout_height="45dp"
        android:hint="  Password"
        app:layout_constraintTop_toBottomOf="@id/horizontal2"
        app:layout_constraintBottom_toBottomOf="@id/horizontal3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/corners"
        android:layout_marginHorizontal="50dp"
        android:layout_marginVertical="10dp"
        android:drawableLeft="@drawable/password"
        android:id="@+id/et_pass"
        android:textColorHint="@color/white"
        android:inputType="textPassword"

        />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/horizontal3"
        app:layout_constraintLeft_toRightOf="@id/vertical1"
        android:id="@+id/checkbox_rememberme"
        app:layout_constraintBottom_toBottomOf="@id/horizontal4"
        android:text="Keep me logged in"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="@+id/verticaltext4"


        />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="210dp"
        android:layout_height="41dp"
        android:layout_marginHorizontal="100dp"
        android:background="@drawable/corners"
        android:text="Sign in"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/horizontal4"
        />


    <android.support.constraint.Guideline
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/vertical1"
        app:layout_constraintGuide_percent="0.33"

        />
    <android.support.constraint.Guideline
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/vertical2"
        app:layout_constraintGuide_percent="0.66"
        />
    <android.support.constraint.Guideline
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/vertical3"
        app:layout_constraintGuide_percent="1"

        />
    <android.support.constraint.Guideline
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/verticaltext"
        app:layout_constraintGuide_percent="0.41"

        /> <android.support.constraint.Guideline
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/verticaltext4"
    app:layout_constraintGuide_percent="0.15"

    />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/twit"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/vertical1"
        app:layout_constraintTop_toBottomOf="@id/horizontal6"
        app:layout_constraintBottom_toBottomOf="@id/horizontal7"
        android:id="@+id/twitter_image"
        />

    <ImageView
        android:id="@+id/facebook_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/fc"
        app:layout_constraintBottom_toBottomOf="@id/horizontal7"
        app:layout_constraintLeft_toRightOf="@id/vertical1"
        app:layout_constraintRight_toRightOf="@id/vertical2"
        app:layout_constraintTop_toBottomOf="@id/horizontal6"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/inst"
        app:layout_constraintLeft_toRightOf="@id/vertical2"
        app:layout_constraintRight_toRightOf="@id/vertical3"
        app:layout_constraintTop_toBottomOf="@id/horizontal6"
        app:layout_constraintBottom_toBottomOf="@id/horizontal7"
        android:id="@+id/insta_image"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/forgetpass"
        app:layout_constraintTop_toBottomOf="@id/horizontal5"
        android:text="Forgot Password ?"
        app:layout_constraintRight_toRightOf="@id/vertical3"
        android:layout_marginTop="1dp"
        android:textSize="17sp"
        android:textColor="@color/white"
        android:layout_marginRight="20dp"
        android:visibility="gone"

        />

    <TextView
        android:layout_width="257dp"
        android:layout_height="591dp"
        android:layout_marginTop="24dp"
        android:text="    -------- Smart Library --------"
        android:textSize="21sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/facebook_image"
        android:textColor="@color/white"

        />

</android.support.constraint.ConstraintLayout>