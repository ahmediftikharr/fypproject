<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginbackground">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:id="@+id/card_1"
        android:layout_weight="1"
        android:backgroundTint="@color/cardviewcolor"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:id="@+id/card_layout_list"
            android:background="@drawable/loginbackground"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/issued_book_icon"
                android:id="@+id/list_item_image"
                android:layout_centerVertical="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/list_item_book_name"
                android:text="Book Name"
                android:textSize="15sp"
                android:textStyle="bold"
                android:typeface="normal"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/list_item_image"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:id="@+id/list_item_author_name"
                android:text="Author Name"
                android:textSize="10sp"
                android:layout_margin="10dp"
                android:textStyle="bold"
                android:typeface="normal"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/list_item_image"
                android:layout_below="@id/list_item_book_name"
                />


        </RelativeLayout>
    </android.support.v7.widget.CardView>




</LinearLayout>
