<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailsIssuedBookFragment"
    android:background="@drawable/loginbackground">






    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Book Details"
            android:layout_marginBottom="20dp"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:layout_gravity="center"
            />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@color/userProfileTextBackgroundColor"
            android:clickable="true"
            android:elevation="4dp"
            android:padding="20dp"
            android:textColor="@color/userProfileTextColor"
            android:id="@+id/txt_book_name"
            android:text="Book Name " />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textColor="@color/userProfileTextColor"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:background="@color/userProfileTextBackgroundColor"
            android:clickable="true"
            android:elevation="4dp"
            android:padding="20dp"
            android:id="@+id/txt_book_category"
            android:text="Book Category" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginBottom="3dp"
            android:textColor="@color/userProfileTextColor"
            android:layout_marginTop="3dp"
            android:background="@color/userProfileTextBackgroundColor"
            android:clickable="true"
            android:elevation="4dp"
            android:padding="20dp"
            android:id="@+id/txt_book_issue_date"
            android:text="Issued Date " />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@color/userProfileTextBackgroundColor"
            android:textColor="@color/userProfileTextColor"
            android:clickable="true"
            android:elevation="4dp"
            android:padding="20dp"
            android:id="@+id/txt_book_returned_date"
            android:text="Returned Date" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textColor="@color/userProfileTextColor"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:background="@color/userProfileTextBackgroundColor"
            android:clickable="true"
            android:elevation="4dp"
            android:padding="20dp"
            android:id="@+id/txt_book_fine"
            android:text="Fine" />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@android:color/white"
            android:text="Back"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:id="@+id/btn_back_book_list"
            android:background="@drawable/corners"
            />



    </LinearLayout>




</FrameLayout>